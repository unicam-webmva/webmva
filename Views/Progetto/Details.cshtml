@model webmva.Models.Progetto

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Progetto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ModuliProgetto)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Nome modulo</th>
                    <th>Tipo</th>
                    <th>Applicazione</th>
                    <th>Comando</th>
                </tr>
                @foreach (var item in Model.ModuliProgetto)
                {
                    <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Modulo.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modulo.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modulo.Applicazione)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modulo.Comando)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
