@model webmva.Models.Progetto
 @{ ViewData["Title"] = "Crea progetto"; }
 <div class="container">
    <h2>Nuovo Progetto</h2>
    <hr />
    <div class="row panel panel-default col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group col-md-12">
            <div class="form-group col-md-6"><br>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"  placeholder="nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span><br>
            </div>                
                <div class="form-group col-md-6"><br>
                    
                </div>
                </div>
                
                <div class="form-group ">
                <label for="descrizione">Descrizione</label>
                <textarea class="form-control" id="descrizione" placeholder="descrizione" rows="5" cols="40" style="resize:none"
                    maxlength="1000" asp-for="Descrizione"></textarea>
                    <span asp-validation-for="Descrizione" class="text-danger"></span><br>
            </div>
            
           
            <div class="container">
            <div class="form-group col-6 ">
                <input type="submit" value="Crea" class="btn btn-default" /> |
                  <a asp-action="Index">Torna alla lista</a>
            </div>
            </div>
            
                  
        </form>
    </div>
 
  

