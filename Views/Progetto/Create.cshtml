@model webmva.Models.Progetto
 @{ ViewData["Title"] = "Crea progetto"; }
 <div class="container">
    <h2>Nuovo Progetto</h2>
    <hr />
    <div class="row panel panel-default col-md-10" style="margin:0 auto; float:none">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="col-sm-12">
            <div class="col-sm-7" style="margin:0 auto; float:none"><br>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"  placeholder="nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span><br>
            </div>                
                <div class="form-group col-sm-12 ">
                <label for="descrizione">Descrizione</label>
                <textarea class="form-control" id="descrizione" placeholder="descrizione" rows="5" cols="40" style="resize:none"
                    maxlength="1000" asp-for="Descrizione"></textarea>
                    <span asp-validation-for="Descrizione" class="text-danger"></span><br>
            </div>
            <div class="col-sm-6 col-sm-offset-6 text-right">
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-default" value="Crea" />&nbsp;&nbsp; |
                                                <a asp-action="Index">  Torna alla lista</a>
                                            </div>
                                        </div>
             
            </div>
        </form>
    </div>
    <br>
    </div>
 
  

