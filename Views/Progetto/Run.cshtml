@model webmva.ViewModels.RisultatoVM
@{ ViewData["Title"] = "Risultato"; }
<br>
<div class="container">
<h3><em>Report</em> @Model.NomeProgetto</h3><hr>
<a  class="btn btn-default"asp-action="Scarica" asp-route-id="@Model.ID" value="Scarica"></a>
    
@foreach(var element in @Model.risultati)
{
<div class="panel panel-default">
  <div class="panel-heading">
<h4>Modulo @element.Key</h4></div>
<div class="panel-body">
    @{string[] risultato= element.Value.Split(Environment.NewLine);}
    @for(int i=0; i<risultato.Length; i++){
        @risultato[i]
        <br />
    }
    </div>
</div>
}

</div>