@model webmva.Models.Report

@{ ViewData["Title"] = "Report";
List<webmva.Models.PercorsiReport> lista = ViewBag.Lista; }

<div class="container">
    <h2><em>Dettagli Report</em></h2>
    <h3><em>Progetto:</em><strong> @Model.Progetto.Nome</strong></h3>

    <div class="panel panel-default col-lg-111 col-md-offset-1">
            <table class="table">
                <div class="method">
                   <thead>
                        <tr>
                            <th> <input type="checkbox" name="selezionati" /></th>
                          
                            <th>
                                Percorso
                            </th>
                            
                            <th>Scarica nativo </th>
                            <th>Scarica pdf</th>
                        </tr>
                    </thead>
                </div>
            <tbody>
                
                    @for(int i=0;i<lista.Count; i++)
                    {
                        <tr>
                            <td>
                               <!--<input type="checkbox" value="@lista[i].ID" name="selezionati" />-->
                            </td>
                            <td>
                              @Html.Raw(lista[i].Percorso)
                            </td>
                            <td>
                                <div class="form-group row ">
                                <form asp-action="Download">
                                    <input type="submit" value="Scarica Nativo" asp-action="Download" asp-route-filePath="Report/@lista[i].Percorso" class="btn btn-default" />  |
                                    <input type="submit" value="Scarica PDF" class="btn btn-default" />  |
                                    <a >Cancella </a>
                                </form>
                                </div>
                            </td>

                        </tr>
                    }
                    
                </tbody>
            </table>
          
            <div class="col-lg-12">
                <br>
                <div class="form-group row">
                <div class="col-lg-6">
                <input type="submit"  class="btn btn-default" value="Scarica tutto in PDF" />&nbsp;&nbsp; 
                </div> 
                 <div class="col-lg-6">                      
                <input type="submit"  class="btn btn-default" value="Scarica" />&nbsp;&nbsp; 
                </div>                      
                </div>
                </div>
        </div>
</div>

