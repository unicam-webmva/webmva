@section scripts{
<script>
    $(function () {
        //seleziona scanner
        //$('input[name=nmap]:first').attr('checked', true);   //Setta il tipo di scanner    
        $('input[name=nmap]').change(function () {
            // change the page per this logic
            switch ($('input[name=nmap]:checked').val()) {
                case '-sn':
                    $('#ciao').val('nmap -sn');
                    break;
                case '-T4 -F':
                    $('#ciao').val('nmap -T4 -F'); break;
                case '-T4 -A -v':
                    $('#ciao').val('nmap -T4 -A -v'); break;
                case '-sS -sU':
                    $('#ciao').val('nmap -sS -sU'); break;
                case '-p 1-65535':
                    $('#ciao').val('nmap -p 1-65535'); break;
                case ' ':
                    break;
                default:
                    $('#ciao').val('nmap');
            };
        }).change();
    });

    $(function () {


        $('#ciao').keyup(function () {
            $('input[name=nmap]').removeAttr('checked');
        });
    });
</script> }