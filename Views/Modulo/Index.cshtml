@model IEnumerable<webmva.Models.Modulo>

    @{ ViewData["Title"] = "Moduli"; }
    <div class="container">
        <h2>Moduli</h2>
        <p class="lead">
            I moduli presenti sono questi! Per creare un nuovo modulo <a href="/Modulo/Create">clicca qui</a> !
        </p>
        <hr/>
        <div class="panel panel-default col-lg-10">
            <table class="table">
                <div class="method">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comando)
                            </th>
                            <th>
                                Applicazione
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                </div>
                <tbody>
                    @foreach (var item in Model) {
                    var tipo = item.GetType();
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comando)
                        </td>
                        @{
                          if(tipo == typeof(webmva.Models.ModuloNESSUS)){
                            <td>Nessus</td>
                          }
                          else if(tipo == typeof(webmva.Models.ModuloNMAP)){
                            <td>nmap</td>
                          }   
                        }
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>