@model IEnumerable<webmva.Models.Modulo>

@{
    ViewData["Title"] = "Lista moduli";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Crea nuovo Modulo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comando)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comando)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
