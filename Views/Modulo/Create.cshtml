<div class="col-6 col-md-10">
    <br>
    <div class="col-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="#" data-toggle="collapse" data-target="#apriNmap">
                    <strong>
                        NMAP SCAN
                    </strong>
                    <span class="caret"></span>
                </a>
            </div>
            <div class="collapse col-5" id="apriNmap">
                <div class="panel-body">
                    <h4>
                        <strong> Configura modulo </strong>
                    </h4>
                    <hr>
                    <form asp-action="Create" name="nmapForm">
                        <label asp-for="Nome"></label>
                        <div class="panel panel-default">
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label>Opzioni</label>
                            <div class="panel panel-default">
                                <div class="panel-body form-horizontal payment-form">
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="pingScan" name="nmap" value="-sn">
                                            <span class="label-text">Ping scan </span>
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="scanVeloce" name="nmap" value="-T4 -F">
                                            <span class="label-text"></span>Scan veloce</span>
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="scanIntenso" name="nmap" value="-T4 -A -v">
                                            <span class="label-text">Scan intenso</span>
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="porteUDP" name="nmap" value="-sS -sU">
                                            <span class="label-text">Porte UDP</span>
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="allTCP" name="nmap" value="-p 1-65535">
                                            <span class="label-text">Tutte le porte TCP</span>
                                        </label>
                                    </div>
                                    <br>
                                    <input type="text" asp-for="Comando" class="form-control" id="Comando" name="Comando">
                                    <br>
                                    <div class="col text-right">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="#" data-toggle="collapse" data-target="#apriNessus">
                    <strong>
                        NESSUS SCAN
                    </strong>
                    <span class="caret"></span>
                </a>
            </div>
            <div class="collapse col-5" id="apriNessus">
                <div class="panel-body">
                    <h4>
                        <strong> Configura modulo </strong>
                    </h4>
                    <hr>
                    <form asp-action="Create" name="nessusForm">
                        <label asp-for="Nome"></label>
                        <div class="panel panel-default">
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label>Opzioni</label>
                            <div class="panel panel-default">
                                <div class="panel-body form-horizontal payment-form">
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="simpleScan" name="nessus" value="BOH!">
                                            <span class="label-text">Scan semplice </span>
                                        </label>
                                    </div>
                                    <br>
                                    <input type="text" asp-for="Comando" class="form-control" id="Comando2" name="Comando2">
                                    <br>
                                    <div class="col text-right">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="#" data-toggle="collapse" data-target="#apriOpenVAS">
                    <strong>
                        OPENVAS SCAN
                    </strong>
                    <span class="caret"></span>
                </a>
            </div>
            <div class="collapse col-5" id="apriOpenVAS">
                <div class="panel-body">
                    <h4>
                        <strong> Configura modulo </strong>
                    </h4>
                    <hr>
                    <form asp-action="Create" name="nmapForm">
                        <label asp-for="Nome"></label>
                        <div class="panel panel-default">
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label>Opzioni</label>
                            <div class="panel panel-default">
                                <div class="panel-body form-horizontal payment-form">
                                    <div class="form-check">
                                        <label>
                                            <input type="radio" id="scan" name="openvas" value="BOH!">
                                            <span class="label-text">Scan</span>
                                        </label>
                                    </div>
                                    <br>
                                    <input type="text" asp-for="Comando" class="form-control" id="Comando3" name="Comando3">
                                    <br>
                                    <div class="col text-right">
