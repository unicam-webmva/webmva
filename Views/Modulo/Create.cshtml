                                    </div>
                                </div>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts{
<script>
    $(function () {
        // Questa funzione va a cambiare il campo del comando ogni volta
        // che viene cliccato un radio button nel gruppo riguardante nmap    
        $('input[name=nmap]').change(function () {
            switch ($('input[name=nmap]:checked').val()) {
                case '-sn':
                    $('#Comando').val('-sn');
                    break;
                case '-T4 -F':
                    $('#Comando').val('-T4 -F'); break;
                case '-T4 -A -v':
                    $('#Comando').val('-T4 -A -v'); break;
                case '-sS -sU':
                    $('#Comando').val('-sS -sU'); break;
                case '-p 1-65535':
                    $('#Comando').val('-p 1-65535'); break;
                case ' ':
                    break;
                default:
                    $('#Comando').val('');
            };
        }).change();
        // Questa funzione ascolta ogni pressione di tastiera nel campo comando
        // per togliere il valore checked nei radio button nel gruppo di nmap
        $('#Comando').keyup(function () {
            $('input[name=nmap]').removeAttr('checked');
        });
    });
</script> }